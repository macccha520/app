/* pages/add.wxss */
.add-container{
	width:100%;
	margin-top:50rpx;
	border:1px solid #f5f5f5f5;
	padding-left: 30rpx;
	box-sizing: border-box;
	background: #ffffff;
}
.add-put{
	border-bottom:1px solid #f5f5f5f5;
	height:100rpx;
	line-height: 100rpx;	
}
.add-put text{
	float: left;
	font-size: 50rpx;
}
.add-put input{
	float: left;
	display: inline-block;
	height:100%;
	font-size: 40rpx;
	padding-left: 20rpx;
	box-sizing: border-box;
}
.picker{
	padding-left: 30rpx;
	box-sizing: border-box;
	display: inline-block;
}
.upload-btn{
	margin: 100rpx auto;
	width:650rpx;
}
