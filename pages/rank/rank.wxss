/* pages/rank.wxss */
.rank{
	text-align: center;
	min-height: 1200rpx;
	background: #e5e5e5;
}
.rank-top{
  width:100%;
  height:180rpx;
  background: #c13e34;
  color:#ffffff;
  text-align: center;
  padding: 30rpx 30rpx;
  font-size: 23px;
  box-sizing: border-box;
}
.rank-user{
	width:700rpx;
	background: #ffffff;
	height:200rpx;
	line-height: 200rpx;
	margin:0px auto;
	transform: translateY(-50rpx);
	text-align: center;
}
.rank-user image{
	display: inline-block;
	width:130rpx;
	height:130rpx;
	border-radius: 100%;
	margin-top: 35rpx;
	margin-left: 50rpx;
	margin-right: 50rpx;
}
.rank-count{
	display: inline-block;
	transform: translateY(-35rpx);
	font-size: 13px;
}
.rank-count text{
	font-size: 29px;
}
.rank-left{
	float: left;
	margin-top: 10rpx;
}
.rank-left view{
	width:30rpx;
	height:4rpx;
	background: #ffffff;
	margin-bottom: 6rpx;
}
.rank-right{
  float: right;
}
.rank-right image{
	width:70rpx;
	height:70rpx;
	border-radius: 100%;
}
.rank-container{
	margin: 0px auto;
	width:700rpx;
	transform: translateY(-50rpx);
}
.rank-list{
	font-size: 15px;
	background: #ffffff;
	height:55px;
	line-height: 55px;
	padding:0px 39rpx;
}
.rank-container .rank-list:nth-of-type(odd){
	background:#f5f5f5;
}
.rank-index{
	float: left;
	font-size: 18px;
}
.rank-img{
	width:40px;
	height:40px;
	border:1px solid #e0e0e0;
	border-radius: 100%;
	float: left;
	margin-top: 10px;
	margin-left: 39rpx;
}
.rank-img image{
	width:35px;
	height:35px;
	border-radius: 100%;
	margin-top: 2px;
}
.rank-name{
	float: left;
	margin-left: 20rpx;
}
.rank-num{
	float: right;
}