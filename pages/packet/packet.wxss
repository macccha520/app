/* pages/packet.wxss */
.content{
	text-align: center;
}
.receive-top{
  background: #ffffff;
  box-sizing: border-box;
  padding:20px 15px;
  text-align: left;
  height:150rpx;
}
.packet-img{
	float: left;
}
.packet-img image{
	width:40px;
	height:40px;
}
.packet-user{
	margin-left: 10px;
	font-size: 15px;
	float: left;
}
.packet-btn{
	width:65px;
	height:26px;
	line-height: 26px;
	display: inline-block;
	float: right;
	background: #f13612;
	color:#ffffff;
	text-align: center;
	border-radius: 3px;
	margin-top: 15px;
	font-size: 13px;
}
.packet-nav{
	background: #ffffff;
	margin-top:10px;
	height:260rpx;
	display: flex;
	justify-content: center;
	font-size: 15px;
	padding:20px 20px;
	box-sizing: border-box;
}
.nav-left{
	width:50%;
}
.nav-right{
	width:50%;
}
.count{
	font-size: 25px;
	margin-top: 10px;
	margin-bottom: 15px;
}
.num{
	font-size: 18px;
	color:#f13612;
	margin-right: 10px;
}
