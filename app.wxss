/**app.wxss**/
.container {
  width:100%;
  height: 100%;
  box-sizing: border-box;
  background: #ffffff;
}
.logo-container{
	text-align: center;
	display: flex;
	justify-content: flex-start;
	line-height: 80rpx;
	text-align: center;
}
.logo{
  width:100px;
  height:80rpx;
}
.logo image{
	height:80rpx;
	width:100px;
}
.user-name{
	flex: 1;
}
.section{
	width:100%;
	text-align: left;
	padding:5px 10px;
	box-sizing: border-box;
}
.section textarea{
	width:100%;
	min-height: 300rpx;
	font-size: 15px;
}